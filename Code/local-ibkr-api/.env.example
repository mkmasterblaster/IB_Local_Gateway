# IBKR Credentials (DO NOT COMMIT ACTUAL VALUES)
STOCKS_TWS_USERID=
STOCKS_TWS_PASSWORD=
STOCKS_TRADING_MODE=paper

# IBKR Account Numbers
STOCKS_PAPER_ACCOUNT=   # Your paper trading account (starts with DU)
STOCKS_LIVE_ACCOUNT=    

# Which account to use
STOCKS_ACCOUNT=

# Application Security
# STOCKS_JWT_SECRET=generate_a_super_long_random_secret_here_use_openssl_rand_hex_32
ENVIRONMENT=development

# Database Configuration
POSTGRES_DB=stocks_db
POSTGRES_USER=stocks_user
POSTGRES_PASSWORD=stocks_password

# Database URL (used by FastAPI)
DATABASE_URL=postgresql://stocks_user:stocks_password@postgres:5432/stocks_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# IB Gateway Configuration
IB_GATEWAY_HOST=stocks-ib-gateway
IB_GATEWAY_PORT=4003
IB_GATEWAY_CLIENT_ID=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# React Webapp Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_CONTAINER_TYPE=stocks

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Time Zone for IB Gateway
TIME_ZONE=America/New_York
AUTO_RESTART_TIME=01:00

# Resource Limits (optional)
# FASTAPI_MAX_WORKERS=4
# POSTGRES_MAX_CONNECTIONS=100
