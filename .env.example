# =============================================================================
# IB Gateway Configuration
# =============================================================================
# Your Interactive Brokers credentials
# IMPORTANT: Get these from your IB account settings
IB_USERNAME=your_ib_username_here
IB_PASSWORD=your_ib_password_here
IB_TRADING_MODE=paper

# Your IB account number (starts with DU for paper trading)
IB_ACCOUNT=DU1234567

# Gateway connection settings (usually don't need to change these)
IB_GATEWAY_HOST=stocks-ib-gateway
IB_GATEWAY_PORT=4002
IB_CLIENT_ID=1101

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=stocks_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=stocks_db
POSTGRES_HOST=stocks-postgres
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=stocks-redis
REDIS_PORT=6379

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
CONTAINER_NAME=stocks
LOG_LEVEL=INFO

# =============================================================================
# API Configuration
# =============================================================================
API_SECRET_KEY=change_this_to_a_random_secret_key
CORS_ORIGINS=http://localhost:3001
